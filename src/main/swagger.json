{
  "openapi": "3.0.0",
  "info": {
    "title": "Teste t√©cnico Seidor",
    "version": "1.0.0"
  },
  "paths": {
    "/driver/create": {
      "post": {
        "tags": [
          "Driver"
        ],
        "summary": "Create a new driver.",
        "requestBody": {
          "required": true,
          "content": {
            "application/json": {
              "schema": {
                "type": "object",
                "required": [
                  "name"
                ],
                "properties": {
                  "name": {
                    "type": "string",
                    "example": "Driver name"
                  }
                }
              }
            }
          }
        },
        "responses": {
          "201": {
            "description": "New driver created",
            "content": {
              "application/json": {
                "schema": {
                  "type": "object",
                  "properties": {
                    "message": {
                      "type": "string",
                      "example": "f8765bd4-06b5-4603-809a-621b3ce75088"
                    }
                  }
                }
              }
            }
          },
          "400": {
            "description": "Missing param error"
          }
        }
      }
    },
    "/driver/{driverId}": {
      "get": {
        "tags": [
          "Driver"
        ],
        "summary": "Get driver by id.",
        "parameters": [
          {
            "name": "driverId",
            "in": "path",
            "description": "Driver Id",
            "required": true,
            "schema": {
              "type": "string",
              "example": "f8765bd4-06b5-4603-809a-621b3ce75088"
            }
          }
        ],
        "responses": {
          "200": {
            "description": "Driver info",
            "content": {
              "application/json": {
                "schema": {
                  "type": "object",
                  "properties": {
                    "message": {
                      "type": "object",
                      "properties": {
                        "id": {
                          "type": "string",
                          "example": "f8765bd4-06b5-4603-809a-621b3ce75088"
                        },
                        "name": {
                          "type": "string",
                          "example": "Driver name"
                        }
                      }
                    }
                  }
                }
              }
            }
          },
          "404": {
            "description": "Driver not found error"
          }
        }
      },
      "put": {
        "tags": [
          "Driver"
        ],
        "summary": "Update driver",
        "parameters": [
          {
            "name": "driverId",
            "in": "path",
            "description": "Driver Id",
            "required": true,
            "schema": {
              "type": "string",
              "example": "f8765bd4-06b5-4603-809a-621b3ce75088"
            }
          }
        ],
        "requestBody": {
          "required": true,
          "content": {
            "application/json": {
              "schema": {
                "type": "object",
                "required": [
                  "name"
                ],
                "properties": {
                  "name": {
                    "type": "string",
                    "example": "Update driver name"
                  }
                }
              }
            }
          }
        },
        "responses": {
          "204": {
            "description": "Driver updated"
          },
          "400": {
            "description": "Missing param error"
          },
          "404": {
            "description": "Driver not found error"
          }
        }
      },
      "delete": {
        "tags": [
          "Driver"
        ],
        "summary": "Delete driver",
        "parameters": [
          {
            "name": "driverId",
            "in": "path",
            "description": "Driver Id",
            "required": true,
            "schema": {
              "type": "string",
              "example": "f8765bd4-06b5-4603-809a-621b3ce75088"
            }
          }
        ],
        "responses": {
          "204": {
            "description": "Driver deleted"
          },
          "404": {
            "description": "Driver not found error"
          }
        }
      }
    },
    "/driver/all": {
      "get": {
        "tags": [
          "Driver"
        ],
        "summary": "Get all drivers or drivers by name.",
        "parameters": [
          {
            "name": "name",
            "in": "query",
            "description": "Driver name",
            "required": false,
            "schema": {
              "type": "string",
              "example": "Driver name"
            }
          }
        ],
        "responses": {
          "200": {
            "description": "Drivers info",
            "content": {
              "application/json": {
                "schema": {
                  "type": "object",
                  "properties": {
                    "message": {
                      "type": "array",
                      "items": {
                        "type": "object",
                        "properties": {
                          "id": {
                            "type": "string",
                            "example": "f8765bd4-06b5-4603-809a-621b3ce75088"
                          },
                          "name": {
                            "type": "string",
                            "example": "Driver name"
                          }
                        }
                      }
                    }
                  }
                }
              }
            }
          }
        }
      }
    },
    "/vehicle/create": {
      "post": {
        "tags": [
          "Vehicle"
        ],
        "summary": "Create a new vehicle",
        "requestBody": {
          "required": true,
          "content": {
            "application/json": {
              "schema": {
                "type": "object",
                "required": [
                  "plate",
                  "color",
                  "brand"
                ],
                "properties": {
                  "plate": {
                    "type": "string",
                    "example": "BRA2E20"
                  },
                  "color": {
                    "type": "string",
                    "example": "White"
                  },
                  "brand": {
                    "type": "string",
                    "example": "BMW"
                  }
                }
              }
            }
          }
        },
        "responses": {
          "201": {
            "description": "New vehicle created",
            "content": {
              "application/json": {
                "schema": {
                  "type": "object",
                  "properties": {
                    "message": {
                      "type": "string",
                      "example": "f8765bd4-06b5-4603-809a-621b3ce75088"
                    }
                  }
                }
              }
            }
          },
          "400": {
            "description": "Missing param error"
          }
        }
      }
    },
    "/vehicle/{vehicleId}": {
      "get": {
        "tags": [
          "Vehicle"
        ],
        "summary": "Get vehicle by id.",
        "parameters": [
          {
            "name": "vehicleId",
            "in": "path",
            "description": "Vehicle Id",
            "required": true,
            "schema": {
              "type": "string",
              "example": "f8765bd4-06b5-4603-809a-621b3ce75088"
            }
          }
        ],
        "responses": {
          "200": {
            "description": "Vehicle info",
            "content": {
              "application/json": {
                "schema": {
                  "type": "object",
                  "properties": {
                    "message": {
                      "type": "object",
                      "properties": {
                        "id": {
                          "type": "string",
                          "example": "f8765bd4-06b5-4603-809a-621b3ce75088"
                        },
                        "brand": {
                          "type": "string",
                          "example": "BMW"
                        },
                        "color": {
                          "type": "string",
                          "example": "White"
                        },
                        "plate": {
                          "type": "string",
                          "example": "BRA2E20"
                        }
                      }
                    }
                  }
                }
              }
            }
          },
          "404": {
            "description": "Vehicle not found error"
          }
        }
      },
      "put": {
        "tags": [
          "Vehicle"
        ],
        "summary": "Update vehicle",
        "parameters": [
          {
            "name": "vehicleId",
            "in": "path",
            "description": "Vehicle Id",
            "required": true,
            "schema": {
              "type": "string",
              "example": "f8765bd4-06b5-4603-809a-621b3ce75088"
            }
          }
        ],
        "requestBody": {
          "required": true,
          "content": {
            "application/json": {
              "schema": {
                "type": "object",
                "required": [
                  "plate",
                  "color",
                  "brand"
                ],
                "properties": {
                  "plate": {
                    "type": "string",
                    "example": "BRA3E30"
                  },
                  "color": {
                    "type": "string",
                    "example": "Red"
                  },
                  "brand": {
                    "type": "string",
                    "example": "Ferrari"
                  }
                }
              }
            }
          }
        },
        "responses": {
          "204": {
            "description": "Vehicle updated"
          },
          "400": {
            "description": "Missing param error"
          },
          "404": {
            "description": "Vehicle not found error"
          }
        }
      },
      "delete": {
        "tags": [
          "Vehicle"
        ],
        "summary": "Delete vehicle",
        "parameters": [
          {
            "name": "vehicleId",
            "in": "path",
            "description": "Vehicle Id",
            "required": true,
            "schema": {
              "type": "string",
              "example": "f8765bd4-06b5-4603-809a-621b3ce75088"
            }
          }
        ],
        "responses": {
          "204": {
            "description": "Vehicle deleted"
          },
          "404": {
            "description": "Vehicle not found error"
          }
        }
      }
    },
    "/vehicle/all": {
      "get": {
        "tags": [
          "Vehicle"
        ],
        "summary": "Get all vehicles or vehicles by color or vehicles by brand",
        "parameters": [
          {
            "name": "color",
            "in": "query",
            "description": "Vehicle color",
            "required": false,
            "schema": {
              "type": "string",
              "example": "White"
            }
          },
          {
            "name": "brand",
            "in": "query",
            "description": "Vehicle brand",
            "required": false,
            "schema": {
              "type": "string",
              "example": "BMW"
            }
          }
        ],
        "responses": {
          "200": {
            "description": "Vehicle info",
            "content": {
              "application/json": {
                "schema": {
                  "type": "object",
                  "properties": {
                    "message": {
                      "type": "array",
                      "items": {
                        "type": "object",
                        "properties": {
                          "id": {
                            "type": "string",
                            "example": "f8765bd4-06b5-4603-809a-621b3ce75088"
                          },
                          "brand": {
                            "type": "string",
                            "example": "BMW"
                          },
                          "color": {
                            "type": "string",
                            "example": "White"
                          },
                          "plate": {
                            "type": "string",
                            "example": "BRA2E20"
                          }
                        }
                      }
                    }
                  }
                }
              }
            }
          }
        }
      }
    },
    "/vehicle-utilization/create": {
      "post": {
        "tags": [
          "Vehicle Utilization"
        ],
        "summary": "Create a new vehicle utilization",
        "requestBody": {
          "required": true,
          "content": {
            "application/json": {
              "schema": {
                "type": "object",
                "required": [
                  "driverId",
                  "vehicleId",
                  "utilizationMotive"
                ],
                "properties": {
                  "driverId": {
                    "type": "string",
                    "example": "f8765bd4-06b5-4603-809a-621b3ce75088"
                  },
                  "vehicleId": {
                    "type": "string",
                    "example": "f8765bd4-06b5-4603-809a-621b3ce75088"
                  },
                  "utilizationMotive": {
                    "type": "string",
                    "example": "Vehicle utilization to travel"
                  }
                }
              }
            }
          }
        },
        "responses": {
          "201": {
            "description": "New vehicle utilization created",
            "content": {
              "application/json": {
                "schema": {
                  "type": "object",
                  "properties": {
                    "message": {
                      "type": "string",
                      "example": "f8765bd4-06b5-4603-809a-621b3ce75088"
                    }
                  }
                }
              }
            }
          },
          "400": {
            "description": "Missing param error"
          },
          "404": {
            "description": "Driver/Vehicle not found error"
          },
          "409": {
            "description": "Driver/Vehicle conflict error"
          }
        }
      }
    },
    "/vehicle-utilization/all": {
      "get": {
        "tags": [
          "Vehicle Utilization"
        ],
        "summary": "Get all vehicles utilization",
        "responses": {
          "200": {
            "description": "Vehicles utilization info",
            "content": {
              "application/json": {
                "schema": {
                  "type": "object",
                  "properties": {
                    "message": {
                      "type": "array",
                      "items": {
                        "type": "object",
                        "properties": {
                          "id": {
                            "type": "string",
                            "example": "f8765bd4-06b5-4603-809a-621b3ce75088"
                          },
                          "utilizationMotive": {
                            "type": "string",
                            "example": "Vehicle utilization to travel"
                          },
                          "startDate": {
                            "type": "date",
                            "example": "2024-03-17T23:23:52.239Z"
                          },
                          "vehicleUtilizationIsActive": {
                            "type": "boolean",
                            "example": true
                          },
                          "endDate": {
                            "type": "string",
                            "example": "2024-03-17T23:23:52.239Z",
                            "nullable": true
                          },
                          "driver": {
                            "type": "object",
                            "properties": {
                              "id": {
                                "type": "string",
                                "example": "f8765bd4-06b5-4603-809a-621b3ce75088"
                              },
                              "name": {
                                "type": "string",
                                "example": "Driver name"
                              }
                            }
                          },
                          "vehicle": {
                            "type": "object",
                            "properties": {
                              "id": {
                                "type": "string",
                                "example": "f8765bd4-06b5-4603-809a-621b3ce75088"
                              },
                              "brand": {
                                "type": "string",
                                "example": "BMW"
                              },
                              "color": {
                                "type": "string",
                                "example": "White"
                              },
                              "plate": {
                                "type": "string",
                                "example": "BRA2E20"
                              }
                            }
                          }
                        }
                      }
                    }
                  }
                }
              }
            }
          }
        }
      }
    },
    "/vehicle-utilization/{vehicleUtilizationId}": {
      "put": {
        "tags": [
          "Vehicle Utilization"
        ],
        "summary": "Finish vehicle utilization",
        "parameters": [
          {
            "name": "vehicleUtilizationId",
            "in": "path",
            "description": "Vehicle Utilization Id",
            "required": true,
            "schema": {
              "type": "string",
              "example": "f8765bd4-06b5-4603-809a-621b3ce75088"
            }
          }
        ],
        "responses": {
          "204": {
            "description": "Finished vehicle utilization"
          },
          "404": {
            "description": "Vehicle Utilization not found error"
          }
        }
      }
    }
  }
}