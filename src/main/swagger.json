{
  "openapi": "3.0.0",
  "info": {
    "title": "Teste t√©cnico Seidor",
    "version": "1.0.0"
  },
  "paths": {
    "/driver/create": {
      "post": {
        "tags": [
          "Driver"
        ],
        "summary": "Create a new driver.",
        "requestBody": {
          "required": true,
          "content": {
            "application/json": {
              "schema": {
                "type": "object",
                "required": [
                  "name"
                ],
                "properties": {
                  "name": {
                    "type": "string",
                    "example": "Driver name"
                  }
                }
              }
            }
          }
        },
        "responses": {
          "201": {
            "description": "New driver created",
            "content": {
              "application/json": {
                "schema": {
                  "type": "object",
                  "properties": {
                    "message": {
                      "type": "string",
                      "example": "f8765bd4-06b5-4603-809a-621b3ce75088"
                    }
                  }
                }
              }
            }
          },
          "400": {
            "description": "Missing param error"
          }
        }
      }
    },
    "/driver/{driverId}": {
      "get": {
        "tags": [
          "Driver"
        ],
        "summary": "Get driver by id.",
        "parameters": [
          {
            "name": "driverId",
            "in": "path",
            "description": "Driver Id",
            "required": true,
            "schema": {
              "type": "string",
              "example": "f8765bd4-06b5-4603-809a-621b3ce75088"
            }
          }
        ],
        "responses": {
          "200": {
            "description": "Driver info",
            "content": {
              "application/json": {
                "schema": {
                  "type": "object",
                  "properties": {
                    "message": {
                      "type": "object",
                      "properties": {
                        "id": {
                          "type": "string",
                          "example": "f8765bd4-06b5-4603-809a-621b3ce75088"
                        },
                        "name": {
                          "type": "string",
                          "example": "Driver name"
                        }
                      }
                    }
                  }
                }
              }
            }
          },
          "404": {
            "description": "Driver not found error"
          }
        }
      }
    },
    "/driver/all": {
      "get": {
        "tags": [
          "Driver"
        ],
        "summary": "Get all drivers or drivers by name.",
        "parameters": [
          {
            "name": "name",
            "in": "query",
            "description": "Driver name",
            "required": false,
            "schema": {
              "type": "string",
              "example": "Driver name"
            }
          }
        ],
        "responses": {
          "200": {
            "description": "Drivers info",
            "content": {
              "application/json": {
                "schema": {
                  "type": "object",
                  "properties": {
                    "message": {
                      "type": "array",
                      "items": {
                        "type": "object",
                        "properties": {
                          "id": {
                            "type": "string",
                            "example": "f8765bd4-06b5-4603-809a-621b3ce75088"
                          },
                          "name": {
                            "type": "string",
                            "example": "Driver name"
                          }
                        }
                      }
                    }
                  }
                }
              }
            }
          }
        }
      }
    }
  }
}