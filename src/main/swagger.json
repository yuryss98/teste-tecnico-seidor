{
  "openapi": "3.0.0",
  "info": {
    "title": "Teste t√©cnico Seidor",
    "version": "1.0.0"
  },
  "paths": {
    "/driver/create": {
      "post": {
        "tags": [
          "Driver"
        ],
        "summary": "Create a new driver.",
        "requestBody": {
          "required": true,
          "content": {
            "application/json": {
              "schema": {
                "type": "object",
                "required": [
                  "name"
                ],
                "properties": {
                  "name": {
                    "type": "string",
                    "example": "Driver name"
                  }
                }
              }
            }
          }
        },
        "responses": {
          "201": {
            "description": "New driver created",
            "content": {
              "application/json": {
                "schema": {
                  "type": "object",
                  "properties": {
                    "message": {
                      "type": "string",
                      "example": "f8765bd4-06b5-4603-809a-621b3ce75088"
                    }
                  }
                }
              }
            }
          },
          "400": {
            "description": "Missing param error"
          }
        }
      }
    }
  }
}